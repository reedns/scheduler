%nav.top-bar{"data-topbar" => "", :role => "navigation"}
  %ul.title-area
    %li.name
      %h1= link_to 'Massage Scheduler', root_path
    / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
    %li.toggle-topbar.menu-icon
      %a{:href => "#"}
        %span Menu
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li= link_to 'Sign Out', sign_out_path
        - if current_user.therapist?
          %li.has-dropdown
            = link_to "#{current_user.username}", account_path
            %ul.dropdown
              %li= link_to 'Create an Appointment', new_appointment_path
              %li= link_to 'Client List', client_list_path
        - else
          %li= link_to "#{current_user.username}", account_path
      - else
        %li= link_to 'Sign In', sign_in_path
        %li= link_to 'Create An Account', sign_up_path
