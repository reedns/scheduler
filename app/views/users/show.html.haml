%h1 This is your account page
%br/
%h3 Here you can view your current appointments and update your account info
%p#notice= notice
.row
  .small-2.large-4.columns
    %h2 Your Account Info
    %p
      %strong Username:
      = @user.username
      %br/
      %strong Name:
      = @user.full_name
      %br/
      %strong Email:
      = @user.email
    = link_to 'Edit your account info', edit_user_registration_path
  .small-4.large-4.columns
  .small-6.large-4.columns
    %h2 Your Reserved Appointments
    - @appointments.each do |appt|
      - if appt.client_id != nil
        %p
          %strong Date:
          = appt.date
          %br/
          %strong Time:
          = appt.reservation_time.strftime("%l:%M%p")
          %br/
          - if current_user.role != 'therapist'
            %strong Therapist:
            = appt.therapist.full_name
      - else
        %strong Client:
        = appt.client.full_name
      = button_to 'Cancel Appointment', appointment_path(appt, appointment: {reserved: false, client_id: nil, cancelled_id: appt.client_id}), method: :put, data: {confirm: 'Are you sure?'}
      %hr/
