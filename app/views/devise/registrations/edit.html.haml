.row
  .small-8.columns.small-centered
    .signup-panel
      %p.welcome Edit Profile
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-torso-female
          .small-10.columns
            = f.text_field :full_name, autofocus: true, placeholder: 'Full name'
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-torso
          .small-10.columns
            = f.text_field :username, autofocus: true, placeholder: 'Username'
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-mail
          .small-10.columns
            = f.email_field :email, autofocus: true, placeholder: 'Email'
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-lock
          .small-10.columns
            = f.password_field :password, autocomplete: "off", placeholder: 'Password'
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-lock
          .small-10.columns
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation'
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-lock
          .small-10.columns
            = f.password_field :current_password, autocomplete: "off", placeholder: "Current Password"
        %div= f.submit "Update", class: 'button'
      %p
        Unhappy?
        \#{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
