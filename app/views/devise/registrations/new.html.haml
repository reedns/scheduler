.row
  .small-8.columns.small-centered
    .signup-panel
      %p.welcome Sign Up!
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-torso-female
          .small-10.columns
            = f.text_field :full_name, autofocus: true, placeholder: 'Full name'
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-torso
          .small-10.columns
            = f.text_field :username, autofocus: true, placeholder: 'Username'
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-mail
          .small-10.columns
            = f.email_field :email, autofocus: true, placeholder: 'Email'
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-lock
          .small-10.columns
            = f.password_field :password, autocomplete: "off", placeholder: 'Password'
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-lock
          .small-10.columns
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation'
        - if devise_mapping.rememberable?
          .row.collapse
            = f.check_box :remember_me, class: 'inline'
            = f.label :remember_me, class: 'inline'
        = f.submit 'Sign Up!', class: 'button'
      %p
        Already have an account? #{link_to 'Sign in here', sign_in_path} &raquo
